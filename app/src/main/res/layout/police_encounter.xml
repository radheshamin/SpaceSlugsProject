<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/player"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="player info"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/ship"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/player"
                android:gravity="center_horizontal"
                android:text="ship info"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/setup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_below="@id/ship"
                android:text="You have encountered the police. They ask if you are carrying any illegal goods (firearms or narcotics). You have the choice of telling the truth (you will forfeit your goods but pay a small fine), bluffing ( if caught, you will forfeit your goods and pay a steep fine), bribing the police (you will forfeit your goods and pay a steep fine if the bribe is not accepted), or fleeing from them (you will forfeit your goods and pay a steep fine if the flee is not successful)."
                android:textSize="20sp" />

            <TextView
                android:id="@+id/result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/setup"
                android:layout_marginTop="10sp"
                android:gravity="center_horizontal"
                android:text=""
                android:textSize="25sp" />

            <Button
                android:id="@+id/truth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_below="@id/result"
                android:text="Tell The Truth"
                android:textSize="18sp" />

            <Button
                android:id="@+id/bluff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_below="@id/truth"
                android:text="Bluff"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/bribe_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:layout_marginTop="10sp"
                android:layout_below="@id/bluff"
                android:inputType="number" />

            <Button
                android:id="@+id/bribe_button"
                android:layout_width="212dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_toRightOf="@id/bribe_amount"
                android:layout_below="@id/bluff"
                android:text="Bribe"
                android:textSize="18sp" />

            <Button
                android:id="@+id/flee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_below="@id/bribe_amount"
                android:text="Flee"
                android:textSize="18sp" />

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>