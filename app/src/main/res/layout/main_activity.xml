<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E2050000">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:gravity="center_horizontal"
                android:text="Welcome to Space Trader. Your goal is to amass enough money so you can buy your own moon, then claim that moon to retire to it. The journey won't be easy. Moons are expensive and along the way, you will encounter many dangers from pirates to the police. You can earn money by trading goods, or if you are daring enough, you can become a pirate or a bounty hunter to earn extra money. You will start with a basic spaceship, but you can buy new and better spaceships along your journey. Good luck."
                android:textColor="#2196F3"
                android:textSize="24sp"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="81dp"
                android:layout_marginTop="15dp"
                android:background="#51FFFFFF"
                android:gravity="center_horizontal|center_vertical"
                android:text="Start New Game"
                android:textColor="#000000" />

            <Button
                android:id="@+id/load_button"
                android:layout_width="match_parent"
                android:layout_height="81dp"
                android:layout_marginTop="15dp"
                android:background="#51FFFFFF"
                android:gravity="center_horizontal|center_vertical"
                android:text="Load Previous Save"
                android:textColor="#000000" />


        </LinearLayout>
    </ScrollView>

</RelativeLayout>